---
import Page from "./page.astro"
import TopNavigation from "../client/top-navigation.svelte"
import Background from "../client/background.svelte"
import Sidebar from "./sidebar.astro"

const { page } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>dawns.info</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
	
        <link rel="stylesheet" href="/style/main.css">
        <link rel="stylesheet" href="/style/blog.css">
        <link rel="stylesheet" href="/style/music-shelf.css">
    </head>
	<body>
        <Background client:load />
		<Sidebar page={page}/>
        <div id="main">
            <div id="top-navigation">
                <div id="squiggle">~/</div>
                <div id="path">{page}</div>
            </div>  
            <div id="content">
                <slot />
            </div>
        </div>
	</body>
</html>

<script>
    import { navigateBack } from "../navigation.ts"

    window.addEventListener("popstate", (event) => {
        navigateBack(event)
    })
</script>